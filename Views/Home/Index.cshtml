@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        align-items: center;
    }

    .divForm {
        width: 50%;
        padding-top: 29px;
    }
</style>

<div class="divForm container">
    <div class="jumbotron jumbotron-fluid">
        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {
            <form>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" required>
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" required>
                </div>
                <input type="submit" class="btn btn-primary" value="Get in" name="actions" />
            </form>
        }
        @using (Html.BeginForm("HandleUser", "Home", FormMethod.Get))
        {
            <br />
            <input type="submit" class="btn btn-info" value="Create Account" name="actions" />
        }
    </div>
</div>

@if (ViewData["Danger"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["Danger"]
    </div>
}

@if (ViewData["Success"] != null)
{
    <div class="alert alert-success" role="alert">
        @ViewData["Success"]
    </div>
}